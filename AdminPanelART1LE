-- CP Creator Toggle
local cpCreatorY = emoteY + 38 + 10
local cpCreatorBtn = Instance.new("TextButton", Frame)
cpCreatorBtn.Size = UDim2.new(1, 0, 0, 38)
cpCreatorBtn.Position = UDim2.new(0, 0, 0, cpCreatorY)
